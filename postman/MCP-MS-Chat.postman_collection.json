{
  "info": {
    "name": "MCP MS Chat API",
    "description": "Postman collection for testing MCP MS Chat API with SSE support",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "SSE Events",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "text/event-stream"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/events",
          "host": ["{{baseUrl}}"],
          "path": ["api", "events"]
        },
        "description": "Connect to the SSE endpoint to receive real-time updates. Requires an access token with appropriate permissions."
      },
      "response": []
    },
    {
      "name": "Create Chat",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"topic\": \"Team Discussion\",\n  \"chatType\": \"group\",\n  \"members\": [\n    {\"id\": \"user1@example.com\"},\n    {\"id\": \"user2@example.com\"}\n  ]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/chats",
          "host": ["{{baseUrl}}"],
          "path": ["api", "chats"]
        },
        "description": "Create a new chat with specified members"
      },
      "response": []
    },
    {
      "name": "Send Message",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"content\": \"Hello, team! This is a test message.\",\n  \"contentType\": \"text\"\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "{{baseUrl}}/api/chats/{{chatId}}/messages",
          "host": ["{{baseUrl}}"],
          "path": ["api", "chats", "{{chatId}}", "messages"],
          "variable": [
            {
              "key": "chatId",
              "value": "19:meeting_NDQ4M2E4ZWMtYjYyMy00YjA2LWI0Y2ItYmYzY2MxNzNlY2Y4@thread.v2"
            }
          ]
        },
        "description": "Send a message to a specific chat"
      },
      "response": []
    },
    {
      "name": "Get Chat Messages",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/chats/{{chatId}}/messages?top=50&skip=0",
          "host": ["{{baseUrl}}"],
          "path": ["api", "chats", "{{chatId}}", "messages"],
          "query": [
            {
              "key": "top",
              "value": "50"
            },
            {
              "key": "skip",
              "value": "0"
            }
          ],
          "variable": [
            {
              "key": "chatId",
              "value": "19:meeting_NDQ4M2E4ZWMtYjYyMy00YjA2LWI0Y2ItYmYzY2MxNzNlY2Y4@thread.v2"
            }
          ]
        },
        "description": "Retrieve messages from a specific chat. The chatId should be a valid Microsoft Teams chat ID."
      },
      "response": []
    },
    {
      "name": "Get Chat Info",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{accessToken}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{baseUrl}}/api/chats/{{chatId}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "chats", "{{chatId}}"],
          "variable": [
            {
              "key": "chatId",
              "value": "19:meeting_NDQ4M2E4ZWMtYjYyMy00YjA2LWI0Y2ItYmYzY2MxNzNlY2Y4@thread.v2"
            }
          ]
        },
        "description": "Get information about a specific chat"
      },
      "response": []
    }
  ],
  "event": [
    {
      "listen": "prerequest",
      "script": {
        "exec": [
          "// Set environment variables if needed",
          "// pm.environment.set('variable_key', 'variable_value');"
        ],
        "type": "text/javascript"
      }
    },
    {
      "listen": "test",
      "script": {
        "exec": [
          "// Tests for the request",
          "pm.test(\"Status code is 200\", function () {",
          "    pm.response.to.have.status(200);",
          "});"
        ],
        "type": "text/javascript"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string",
      "description": "The base URL of your API server"
    },
    {
      "key": "accessToken",
      "value": "your-microsoft-graph-access-token",
      "type": "string",
      "description": "Microsoft Graph API access token with required permissions (Chat.Create, Chat.ReadWrite, etc.)"
    },
    {
      "key": "chatId",
      "value": "19:meeting_NDQ4M2E4ZWMtYjYyMy00YjA2LWI0Y2ItYmYzY2MxNzNlY2Y4@thread.v2",
      "type": "string",
      "description": "Microsoft Teams chat ID (e.g., from the create chat response)"
    }
  ]
}
